<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">
	<!-- 결과값 담기 -->
    <resultMap id="UserResultMap" type="com.example.demo.User.User">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>
        <result property="role" column="role"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <!-- 아이디로 유저 조회 -->
    <select id="findByUserId" parameterType="String" resultMap="UserResultMap">
        SELECT *
        FROM user
        WHERE user_id = #{userId}
    </select>

    <!-- 회원 등록 -->
    <insert id="save" parameterType="com.example.demo.User.User">
        INSERT INTO user (user_id, password, nickname, email, created_at)
        VALUES (#{userId}, #{password}, #{nickname}, #{email}, NOW())
    </insert>

    <!-- 전체 유저 조회 -->
    <select id="findAll" resultMap="UserResultMap">
        SELECT *
        FROM user
    </select>

    <!-- 유저 수정 -->
	<update id="update" parameterType="com.example.demo.User.User">
	    UPDATE user
	    <set>
	        <if test="password != null and password != ''">
	            password = #{password},
	        </if>
	        <if test="nickname != null and nickname != ''">
	            nickname = #{nickname},
	        </if>
	        <if test="email != null and email != ''">
	            email = #{email},
	        </if>
	        updated_at = NOW()
	    </set>
	    WHERE user_id = #{userId}
	</update>

    <!-- 유저 삭제 -->
    <delete id="delete" parameterType="Long">
        DELETE FROM user
        WHERE id = #{id}
    </delete>
    
    <!-- 아이디로 유저 조회 -->
    <select id="findByUserId" parameterType="String" resultMap="UserResultMap">
        SELECT *
        FROM user
        WHERE email = #{email}
    </select>
</mapper>
